<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_query"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="test.final_practice.DisplayQueryActivity">

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_data_num"
        android:gravity="center"/>

    <TextView
        android:text="from to"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_from_to" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="@string/start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_start_date"
            android:onClick="startTime"
            android:layout_weight="1"/>

        <Button
            android:text="@string/end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_end_date"
            android:onClick="endTime"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="@string/goBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_go_back"
            android:onClick="goBack"/>

    </TableRow>

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="test.final_practice.DisplayFragment"
        android:id="@+id/fragment" />

</TableLayout>
